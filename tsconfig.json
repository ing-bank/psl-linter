{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"inlineSourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"outDir": "dist",
		"alwaysStrict": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
	},
	"exclude": [
		"node_modules",
		"out",
		"dist",
		"lib",
		"tmp",
		"test",
		"build-package-json.js",
	],
}
